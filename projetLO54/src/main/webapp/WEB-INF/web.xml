<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>fr.utbm.servlet.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConnexionServlet</servlet-name>
        <servlet-class>fr.utbm.servlet.ConnexionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InscriptionServlet</servlet-name>
        <servlet-class>fr.utbm.servlet.InscriptionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FormationsServlet</servlet-name>
        <servlet-class>fr.utbm.servlet.FormationsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CourseSessionsServlet</servlet-name>
        <servlet-class>fr.utbm.servlet.CourseSessionsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListCourseSessionsServlet</servlet-name>
        <servlet-class>fr.utbm.servlet.ListCourseSessionsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendMailServlet</servlet-name>
        <servlet-class>fr.utbm.servlet.SendMailServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeconnexionServlet</servlet-name>
        <servlet-class>fr.utbm.servlet.DeconnexionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>fr.utbm.servlet.IndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConnexionServlet</servlet-name>
        <url-pattern>/connexion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InscriptionServlet</servlet-name>
        <url-pattern>/inscription</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FormationsServlet</servlet-name>
        <url-pattern>/formations</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CourseSessionsServlet</servlet-name>
        <url-pattern>/courseSessions</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListCourseSessionsServlet</servlet-name>
        <url-pattern>/listCourseSessions</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendMailServlet</servlet-name>
        <url-pattern>/send</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeconnexionServlet</servlet-name>
        <url-pattern>/deconnexion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <include-prelude>/WEB-INF/jsp/taglibs.jsp</include-prelude>
        </jsp-property-group>
    </jsp-config>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
